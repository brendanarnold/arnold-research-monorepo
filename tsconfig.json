{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    // "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": true,
    "lib": [
      "es2019"
    ],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}

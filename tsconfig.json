{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2015",
    "sourceMap": true,
    "lib": ["es2019", "DOM"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build" // This avoids polluting source directories if root tsc is run
  },
  "exclude": ["node_modules", ".vscode"]
}

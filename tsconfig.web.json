{
  "compilerOptions": {
    "module": "es6",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es2019"
    ],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build" // This avoids polluting source directories if root tsc is run
  },
  "exclude": ["node_modules", ".vscode"]
}

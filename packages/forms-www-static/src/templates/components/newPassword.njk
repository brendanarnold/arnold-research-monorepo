<fieldset id="{{ viewModel.name }}__container">
  <label for="{{ viewModel.name }}">{{ viewModel.label }}</label>
  <input type="password" name="{{ viewModel.name }}" autocomplete="password" value="{{ viewModel.data }}" />
  <label for="{{ viewModel.name }}-confirm">Confirm</label>
  <input type="password" name="{{ viewModel.name }}Confirm" autocomplete="password" value="{{ viewModel.data }}" />
  <div id="{{ viewModel.name }}__error-card" class="error-card hidden">There is an error</div>

  <script lang="javascript">

document.addEventListener('DOMContentLoaded', function () {

  var passwordInput = document.getElementsByName('{{ viewModel.name }}')[0]
  var passwordConfirmInput = document.getElementsByName('{{ viewModel.name }}Confirm')[0]
  var errorCard = document.getElementById('{{ viewModel.name }}__error-card')

  var confirmTouched = false

  function onInputChange () {
    if (passwordConfirmInput.value === passwordInput.value && confirmTouched) {
      errorCard.classList.add('hidden')
    } else {
      errorCard.classList.remove('hidden')
    }
  }
  function onFocus () { confirmTouched = true } 
  
  passwordInput.addEventListener('focus', onFocus)
  passwordConfirmInput.addEventListener('focus', onFocus)
  passwordInput.addEventListener('input', onInputChange)
  passwordConfirmInput.addEventListener('input', onInputChange)


<fieldset data-field-name="{{ viewModel.name }}" id="{{ viewModel.name }}__container" class="new-password-field__container">
  <label for="{{ viewModel.name }}">{{ viewModel.label }}</label>
  <input type="password" name="{{ viewModel.name }}" autocomplete="password" value="{{ viewModel.data }}"/>
  <label for="{{ viewModel.name }}-confirm">Confirm</label>
  <input type="password" name="{{ viewModel.name }}Confirm" autocomplete="password" value="{{ viewModel.data }}"/>
  {% include "error-block.njk" %}
</fieldset>
